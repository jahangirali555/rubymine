<h1>Listing usertypes</h1>

<table>
  <thead>
    <tr>
      <th>Usertype</th>
      <th>Usertype name</th>
      <th>Can create</th>
      <th>Can delete</th>
      <th>Can view</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @usertypes.each do |usertype| %>
      <tr>
        <td><%= usertype.usertype_id %></td>
        <td><%= usertype.usertype_name %></td>
        <td><%= usertype.can_create %></td>
        <td><%= usertype.can_delete %></td>
        <td><%= usertype.can_view %></td>
        <td><%= link_to 'Show', usertype %></td>
        <td><%= link_to 'Edit', edit_usertype_path(usertype) %></td>
        <td><%= link_to 'Destroy', usertype, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Usertype', new_usertype_path %>
